<script type="text/ng-template" id="type_1_setter.html">
    <div ng-controller="WizardParamSetter1Controller">
        {% embed "LeapPanelBundle:TestWizard:type_base_setter.html.twig" %}
            {% trans_default_domain "TestWizard" %}
            {% block setter %}
                {% embed "LeapPanelBundle::form_v_single.html.twig" %}
                    {% trans_default_domain "TestWizard" %}
                    {% block legend %}{% verbatim %}{{ title }}{% endverbatim %}{% endblock %}
                    {% block legend_tooltip %}{{ 'param.setter.titles.textarea.tooltip'|trans }}{% endblock %}
                    {% block control %}
                        <textarea ng-model="output" ng-trim="false" ng-change="onPrimitiveValueChange(output)"
                                  class='form-control' ng-model-options='{ updateOn: "blur" }'
                                  ng-disabled="!editable"></textarea>
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    </div>
</script>