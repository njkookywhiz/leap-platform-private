{% trans_default_domain "Test" %}
<div type="text/ng-template" id="port_input_add_dialog.html">
    <div class="modal-body">
        {% embed "LeapPanelBundle::form_v_panel.html.twig" %}
            {% trans_default_domain "Test" %}
            {% block legend %}{{ "flow.ports.dialog.titles.input.add"|trans }}{% endblock %}
            {% block legend_tooltip %}{{ "flow.ports.dialog.titles.input.add.tooltip"|trans }}{% endblock %}
            {% block description %}{% endblock %}
            {% block elements %}
                {% embed "LeapPanelBundle::form_v_element.html.twig" %}
                    {% trans_default_domain "Test" %}
                    {% block label %}{{ 'flow.ports.dialog.fields.exposed.inputs'|trans }}{% endblock%}
                    {% block tooltip %}{{ 'flow.ports.dialog.fields.exposed.inputs.tooltip'|trans }}{% endblock%}
                    {% block control %}
                        <div class="port-list-container">
                            <div class="port-list-element" ng-repeat="port in node.ports | filter:{ type: 0, dynamic: 0 }">
                                <input type="checkbox" ng-model="port.exposed" ng-true-value='"1"' ng-false-value='"0"' ng-disabled="!editable || isPortConnected(port)" />
                                {% verbatim %}{{testCollectionService.getVariable(port.variable).name}}{% endverbatim %}
                            </div>
                        </div>
                        <div style="clear: left;"></div>
                        <div class="control-button-group">
                            <button class="btn btn-success" ng-click="changeExposed()" ng-disabled="!editable">{{ 'form.button.save'|trans({},"panel") }}</button>
                        </div>
                    {% endblock %}
                {% endembed %}
                
                {% embed "LeapPanelBundle::form_v_element.html.twig" %}
                    {% trans_default_domain "Test" %}
                    {% block label %}{{ 'flow.ports.dialog.fields.dynamic.input'|trans }}{% endblock%}
                    {% block tooltip %}{{ 'flow.ports.dialog.fields.dynamic.input.tooltip'|trans }}{% endblock%}
                    {% block control %}
                        <input ng-model="dynamicInputName" type="text" style="width:100%;" class='form-control' ng-disabled="!editable" />
                        <div class="control-button-group">
                            <button class="btn btn-success" ng-click="addDynamic()" ng-disabled="!editable">{{ 'form.button.add'|trans({},"panel") }}</button>
                        </div>
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="cancel()">{{ 'form.button.cancel'|trans({},"panel") }}</button>
    </div>
</div>
