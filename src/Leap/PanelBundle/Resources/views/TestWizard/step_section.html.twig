{% extends "::base_include.html.twig" %}
{% set class_name = "TestWizard" %}
{% trans_default_domain "TestWizard" %}

{% block content %}
    <div class="center">
        <button ng-disabled="!isEditable()" ng-click="addStep()" class="btn btn-success btn-sm">{{ 'step.list.button.add'|trans }}</button>
        <button ng-click="gridService.downloadList(stepsGridApi);" class="btn btn-default btn-sm">{{ "list.button.download"|trans({},"panel") }}</button>
        <button ng-disabled="!isEditable()" ng-click="deleteSelectedSteps();" class="btn btn-danger btn-sm">{{ "step.list.button.delete.checked"|trans }}</button>
        <button ng-disabled="!isEditable()" ng-click="deleteAllSteps();" class="btn btn-danger btn-sm">{{ "step.list.button.delete.all"|trans }}</button>
    </div>
    <div ui-grid="stepsOptions" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter ui-grid-selection ui-grid-move-columns class="grid"></div>
{% endblock %}