<script type="text/ng-template" id="type_2_definer.html">
    <div ng-controller="WizardParamDefiner2Controller">
        {% embed "LeapPanelBundle:TestWizard:type_base_definer.html.twig" %}
            {% trans_default_domain "TestWizard" %}
            {% block definition %}
                {% embed "LeapPanelBundle::form_v_single.html.twig" %}
                    {% trans_default_domain "TestWizard" %}
                    {% block legend %}{% verbatim %}{{ testWizardParamService.getDefinerTitle(param) }}{% endverbatim %}{% endblock %}
                    {% block legend_tooltip %}{{ 'param.definer.titles.html.tooltip'|trans }}{% endblock %}
                    {% block control %}
                        <textarea ckeditor="htmlEditorOptions"
                                  ng-model="param.definition.defvalue"
                                  class='form-control'
                                  ng-disabled="!editable"></textarea>
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    </div>
</script>