{% extends "LeapPanelBundle::base_panel.html.twig" %}
{% trans_default_domain "login" %} 
{% block body %}
    {{ parent() }}
    <div class="loginContainer">
        <form action="{{ path('login_check') }}" method="POST">
            {% embed "LeapPanelBundle::form_v_panel.html.twig" %}
                {% trans_default_domain "login" %}
                {% block legend %}{{ 'form.legend'|trans }}{% endblock %}
                {% block legend_tooltip %}{{ 'form.legend.tooltip'|trans }}{% endblock %}
                {% block description %}
                    <div class="loginPageLogo">
                        <img src="{{ asset("bundles/leappanel/images/symbol.png") }}">
                    </div>
                {% endblock %}
                {% block elements %}
                    {% embed "LeapPanelBundle::form_v_element.html.twig" %}
                        {% trans_default_domain "login" %}
                        {% block label %}{{ 'form.field.login'|trans }}{% endblock %}
                        {% block tooltip %}{{ 'form.field.login.tooltip'|trans }}{% endblock %}
                        {% block control %}
                            <input id="username" type="text" name="_username" value="" style="width:100%;" class='form-control'/>
                        {% endblock %}
                    {% endembed %}
                    {% embed "LeapPanelBundle::form_v_element.html.twig" %}
                        {% trans_default_domain "login" %}
                        {% block label %}{{ 'form.field.password'|trans }}{% endblock %}
                        {% block tooltip %}{{ 'form.field.password.tooltip'|trans }}{% endblock %}
                        {% block control %}
                            <input id="password" type="password" name="_password" style="width:100%;" class='form-control'/>
                        {% endblock %}
                    {% endembed %}
                    <tr>
                        <td colspan="3">
                            <div class="loginButton center">
                                <button id="btn-login" class="btn btn-primary">{{ 'form.button.login'|trans }}</button>
                            </div>
                        </td>
                    </tr>
                {% endblock %}
            {% endembed %}
            {% if error %}
                <uib-alert type="danger">{{ error.message|trans }}</uib-alert>
            {% endif %}
        </form>
    </div>
{% endblock %}
